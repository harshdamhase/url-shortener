<body>
    <div class="container">
    <h1>UrL Shinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" required class="form-control col mr-2">
        <button type="submit" class="btn btn-success">Shrink</button>
    </form>

    <table class="table table-stripped table-responsive">
        <thead>
            <tr>
                <th>Full Url</th>

                <th>Short Url</th>

                <th>Cliks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="https://courses.webdevsimplified.com/">https://courses.webdevsimplified.com/</a></td>

                <td><a href="/123456>">123456</a></td>

                <td>10</td>
            </tr>
        </tbody>
    </table>
</div>
